<template>
  	<div class="content">
  		<header class="head">
			<a class="back" href="javascript:window.history.go(-1);"></a>
			<h1 class="y-confirm-order-h1">申请售后</h1>
			<span class="mail" @click="addReturnGoods">提交</span>
		</header>
		<div class="main">
			<div class="evaluate_m">
				<div class="y-order-pro" v-for="(item,index) in orderInfo.orderDetail">
	        		<a href="" class="y-kein">	 
		        		<div class="y-imgbox">
				        	<div class="y-img">
					        	<div class="ab">
					        		<img :src="item.goods_image">
					        	</div>
				        	</div>
		        		</div>       		
			        	<div class="y-jnjcn">
				        	<p class="y-njcn db-overflow">{{item.goods_name}}</p>
				        	<div class="y-ws5d">
					        	<span>{{item.specifications}}</span>
					        </div>
					        <div class="y_name_t">
				        		<p class="y-price">￥{{item.price}}</p>
				        		<em>x{{item.goods_number}}</em>
				        	</div>
			        	</div>
		        	</a>		    
	        	</div>
				<div class="msgbox">
					<textarea placeholder="请描述您需要退货或者换货的理由，会有客服与您联系~(150字以内)" v-model="note"></textarea>
					<div class="add_g_de">
						<div class="g_imgm">
							<ul>
								<li v-for="(pic,index) in imageList">
									<div class="imgbox">
										<img :src="pic"> 
										<em @click="removeImg(index)"></em>
									</div>
								</li> 
								<li id="filePicker">
									<div class="upload_input">
										<input type="file" name="upload_input" id="upload_input">
										<div class="upfile-box">
							                <vue-core-image-upload class="btn btn-primary" :crop="false" @imageuploaded="imageuploaded"   :max-file-size="5242880" 
							                url="/Shop/Order/photoSave" ></vue-core-image-upload>
							            </div>
									</div>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
  	</div>
</template>
<script>
import VueCoreImageUpload from 'vue-core-image-upload'
export default {

  data () {
    return {
      orderInfo : {},
      imageList : [],
      id : '',
      note : ''
    }
  },
  created(){
    this.$store.commit('loading',{show:true,text:"加载中..."});
    this.getData();
  },
  mounted(){
    this.$store.commit('loading',{show:false});	
  },
  components: {
    'vue-core-image-upload': VueCoreImageUpload,
  },
  methods: {
    getData(){
    	this.$http.post('/Shop/Order/orderDetail', {order_sn:this.$route.query.order_sn},{emulateJSON:true}).then(function(response){
        	if( response.data.status == "200000" ){
            	this.orderInfo = response.data.data.orderInfo;  
            	this.id = response.data.data.orderInfo.id;     		
        	}	   
        });
    },
    addReturnGoods : function(){
    	this.$http.post('/Shop/Order/addReturnGoods', {id:this.$route.query.id,order_sn:this.$route.query.order_sn,images:this.imageList,note:this.note},{emulateJSON:true}).then(function(response){
        	if( response.data.status == "200000" ){
        		this.$store.commit('alert',{show:true,text:response.data.message});
        		setTimeout(function(){
        			window.history.go(-1);
        		},1500)
        	}	   
        });	
    },imageuploaded(res) {
       	this.imageList.push(res.data.url);
    },
    removeImg : function(index){
    	this.imageList.splice(index,1);
    }
  }

}
</script>

