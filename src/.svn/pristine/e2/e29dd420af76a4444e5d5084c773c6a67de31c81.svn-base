<script>
import {Swiper,SwiperItem}from 'vux/src/components/swiper'


export default {

	data () {
		return {
			adimgList : [],
			duimgList : [],
			goodsList : [],
			hasAjax:0,
			page : 1,
			nomore : 0
	    }
	},
	created(){
		this.$store.commit('loading',{show:true,text:'加载中...'});
	    this.getdata();
	    this.getGoodsList();	    
	},	
	components : {
	  	Swiper,
	    SwiperItem,
	},
	mounted(){
		//this.$store.scrollfun(2);
	   	this.loadMore();
	},
	methods: {
	  	getdata(){
	  		this.$http.post('/Shop/Public/getAdData', {sign:'index_banner_group'},{emulateJSON:true}).then(function(response){
	  			if( response.data.status == "200000" ){
	            	this.adimgList = response.data.data.adData;
	  			}	   
	        });
	        this.$http.post('/Shop/Public/getShowData', {sign:'index_show_group',isGroup:1},{emulateJSON:true}).then(function(response){
	        	if( response.data.status == "200000" ){
	            	this.duimgList = response.data.data.showData;	        		
	        	}	   
	        });	         
	  	},
	  	getGoodsList : function(){
	  		if( this.hasAjax == 0 ){
	  			this.hasAjax = 1;
		  		this.$http.post('/Shop/Goods/goodsList', {page:this.page,sortType:4},{emulateJSON:true}).then(function(response){	
		  			this.hasAjax = 0;
		  			if( this.page == 0 ){
		  				this.goodsList = response.data.data.list;
		  				this.page++;
		  			}else{
		  				if( response.data.data.list.length == 0 ){
		  					this.hasAjax = 1;
		  					this.nomore = 1;
		  				}else{
		  					this.page++;
		  					this.goodsList = this.goodsList.concat(response.data.data.list);
		  				}
		  			}
		  			this.$store.commit('loading',{show:false});	  			      				        
		        });

		    }
	  	},
	    loadMore(){	        
	        var that = this;
	        this.$store.commit('scrollFun',{dom:'Jcontent',auto:true,bottomCall:function(){
	        	that.getGoodsList();
	        }})
	    }
	    
	}

}
</script>
